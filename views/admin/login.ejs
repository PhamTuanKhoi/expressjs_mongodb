    .login{
        margin-left: 33%;
        margin-top: 8%;
    }
    .btn-login{
        margin-left: 10%;
        width: 410px;
    }

.form__input{
	width: 100%;
	border:0px solid transparent;
	border-radius: 0;
	border-bottom: 1px solid #aaa;
	padding: 1em .5em .5em;
	padding-left: 2em;
	outline:none;
	margin:1.5em auto;
	transition: all .5s ease;
    margin-top: -5px;
}

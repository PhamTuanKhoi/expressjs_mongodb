<div class=" bg-light col-12 fst-italic shadow">
    <div class="d-flex">
        <div class="">
            <a href="/manage/posts" class="btn-sm btn-primary me-2 rounded-circle">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
            </a>
        </div>
        <div class="fw-bold text-primary col-11 text-center ps-4">Thêm bài viết</div>
    </div>
    <div class="card-body">
        <form action="/manage/posts/addPost" method="post">
            <div class="mb-3 ps-5 text-primary pe-5">
              <label class="form-label">Tên sự kiện:</label>
              <select name="id" class="form-control bg-light">
                <option class=""><i class="fa fa-caret-down" aria-hidden="true"></i></option>
              <%
                 if(typeof data !== 'undefined'){
                   data.forEach(val =>{ 
              %>
                <option value="<%=val._id%>"><%=val.name%></option>
              <% })} %>
            </select>
            </div>
              <div class="mb-3 ps-5 text-primary pe-5">
                <label class="form-label">Mô tả:</label>
                <textarea name="posts" id="editor1"></textarea>
              </div>
              <!-- <input type="text" value="<%=new Date()%>"> -->
            <div class="text-center">
                <button type="submit" class="btn btn-danger">Lưu <i class="fa fa-check-circle-o" aria-hidden="true"></i></button>
            </div>
          </form>
    </div>
  </div>

  <script src="/ckeditor/ckeditor.js"></script>
  <script>
      CKEDITOR.replace('editor1', {
        extraPlugins:'filebrowser',
        filebrowserBrowseUrl:'/list',//upload location
        filebrowserUploadMethod:'form',
        filebrowserUploadUrl:'/upload'//route
      });
</script>












<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


<div class="col-5 p-5 ms-5 receive">
  <input type="text" onkeyup="creatdb(this)" class="form-control">
</div>
<section id="searchrsl" class="p-5"></section>
<a id="number"></a>
<input type="text" id="startday">


<script>
  function creatdb(e){
    const search_rs = document.getElementById('searchrsl')
    const number = document.getElementById('number')
    const startday = document.getElementById('startday')
    fetch('creatkey',{
      method: "post",
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({payload: e.value})
    }).then(res => res.json()).then(data =>{
      let payload = data.payload
      search_rs.innerHTML = '';
      if(payload.length < 1){
        search_rs.innerHTML = '<p> err not found. </p>'
      }
      // khuc nay ne
      payload.forEach((item, index) => {
        if(index > 0) search_rs.innerHTML += '<hr>'
        search_rs.innerHTML += `<a class="elemment" id="a${index}">${item.name}</a>`
        number.innerHTML = item.number
        startday.value = item.startday
      });

      var list = document.getElementsByClassName("elemment") // elements
      for (var i = 0; i < list.length; i++) {
          list[i].onclick = function(){
          alert('ok')
          return 
        }
      }
    })
  }
</script>